<flow name="myFlow">
    <view name="MasterView" controller="org.datafx.demo.MasterViewController">
        <linkAction name="editSelected" toController="DetailView" />
        <methodAction name="delete" />
        <actionChain name="add">
            <methodAction name="addNewObject" />
            <linkAction name="edit" toController="DetailView" />
        </actionChain>
    </view>
    <view name="DetailView" controller="org.datafx.demo.DetailViewController">
        <linkAction name="back" toController="MasterView" />
    </view>
    <action name="refresh"></action>
    <initialContext>
        <value key="data.deleteable"/>   <!-- required input parameters -->
    </initialContext>
</flow>